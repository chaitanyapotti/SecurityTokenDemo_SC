{
  "name": "security_token_demo_sc",
  "version": "1.0.0",
  "description": "",
  "main": "truffle-config.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "start:blockchain:client": "bash ./scripts/start-blockchain.sh",
    "stop:blockchain:client": "bash ./scripts/stop-blockchain.sh",
    "migrate": "npm run start:blockchain:client & truffle migrate --reset --all --network=development",
    "test": "npm run start:blockchain:client & truffle compile --all && truffle test --network development",
    "post-test": "npm run stop:blockchain:client",
    "coverage": "touch allFiredEvents & truffle compile --all & solidity-coverage",
    "precommit": "lint-staged && solhint \"contracts/*.sol\"",
    "prettier": "prettier --write \"**/*.{js,json,css,md}\"",
    "eslint-check": "eslint --print-config .eslintrc.js | eslint-config-prettier-check",
    "lint:sol": "solhint contracts/**/*.sol",
    "lint:js": "eslint test/**/*.js"
  },
  "lint-staged": {
    "**/*.{js,json,css,md}": [
      "prettier --write --print-width 150",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chaitanyapotti/SecurityTokenDemo_SC.git"
  },
  "keywords": [],
  "author": "chaitanya potti",
  "license": "ISC",
  "dependencies": {
    "openzeppelin-solidity": "2.0.0"
  },
  "devDependencies": {
    "bn.js": "^4.11.8",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-mocha": "^5.3.0",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^2.4.1",
    "lint-staged": "^8.2.1",
    "moment": "^2.24.0",
    "prettier": "^1.18.2",
    "solhint": "^2.1.0",
    "truffle": "^5.0.22",
    "truffle-hdwallet-provider": "1.0.10"
  },
  "bugs": {
    "url": "https://github.com/chaitanyapotti/SecurityTokenDemo_SC/issues"
  },
  "homepage": "https://github.com/chaitanyapotti/SecurityTokenDemo_SC#readme"
}
